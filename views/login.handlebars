          <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password123!">
        <div class="mb-3 mx-auto" id="passwordHelpInline" class="form-text">Must be 8-20 characters long.</div>
      </div>
  </div>
 
  <div class="mb-3">
      <div class="col-12 col-md-10 mb-3 p-4 md-white mx-auto">
      <button type="submit" class="btn btn-primary">Submit</button>
  </div>
</form>

